# =====================================================================
# WorthWise Backend Dockerfile
# FastAPI + DuckDB + Parquet Analytics
# =====================================================================

FROM python:3.10-alpine
WORKDIR /app

# Install build deps
RUN apk add --no-cache gcc musl-dev libffi-dev

# Create and activate venv
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Copy analytical artifacts (Parquet + DuckDB files)
# These should be generated by ETL and included in build context
COPY artifacts/ ./artifacts/ 2>/dev/null || mkdir -p ./artifacts

# Copy versions manifest
COPY versions.json ./versions.json 2>/dev/null || echo '{}' > ./versions.json

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    ENVIRONMENT=development

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/api/v1/health')" || exit 1
EXPOSE 8000
# <-- added --proxy-headers and forwarded-allow-ips -->
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--proxy-headers", "--forwarded-allow-ips", "*"]