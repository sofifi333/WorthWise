# =====================================================================
# WorthWise Backend Dockerfile
# FastAPI + DuckDB + Parquet Analytics
# =====================================================================

FROM python:3.10-alpine
WORKDIR /app

# Install build deps
RUN apk add --no-cache gcc musl-dev libffi-dev

# Create and activate venv
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY main.py .
COPY app/ ./app/

# Copy analytical artifacts (Parquet + DuckDB files)
# Must be generated by ETL before building Docker image
# If building from git, ensure artifacts are NOT in .gitignore
COPY artifacts/ ./artifacts/

# Copy versions manifest
COPY versions.json ./versions.json

# Environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    ENVIRONMENT=development

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8000/api/v1/health')" || exit 1

EXPOSE 8000

# Run with proxy headers for deployment behind reverse proxy
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--proxy-headers", "--forwarded-allow-ips", "*"]